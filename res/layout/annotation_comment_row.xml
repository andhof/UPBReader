<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
        android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="10dp" 
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="2dp">
        <RelativeLayout
		    android:id="@+id/RelativeLayout01" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:paddingLeft="10dp" 
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="#444444">
		    <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" 
                android:layout_weight="1"
                android:id="@+id/comment_number"
                android:layout_alignParentLeft="true" 
                android:typeface="sans" 
                android:textSize="14sp" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" 
                android:layout_weight="1"
                android:id="@+id/comment_author"
                android:layout_toRightOf="@+id/comment_number" 
                android:typeface="sans" 
                android:textSize="14sp" 
                android:textStyle="bold"
                android:paddingLeft="10dp" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" 
                android:layout_weight="1"
                android:id="@+id/comment_local"
                android:layout_toLeftOf="@+id/comment_updated_at"
                android:paddingRight="5dp"
                android:typeface="sans" 
                android:textSize="13sp" 
                android:textColor="#6666DD"
                android:layout_gravity="right" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" 
                android:layout_weight="1"
                android:id="@+id/comment_updated_at"
                android:layout_alignParentRight="true" 
                android:typeface="sans" 
                android:textSize="14sp" 
                android:layout_gravity="right" />
		</RelativeLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingLeft="10dp" 
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
	        <TextView android:id="@+id/comment_content" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="20dp" />
	     </LinearLayout>
</LinearLayout>
