<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/highlight_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
    >
        <CheckBox 
            android:id="@+id/highlight_color_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:checked="true" />
        <TextView
	        android:id="@+id/highlight_color_label"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:singleLine="true"
	        android:textSize="16dp"
	        android:gravity="center_vertical" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/red"
            android:id="@+id/highlight_color"
        />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center"
    >
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/red"
            android:id="@+id/highlight_color_button1"
        />
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightgreen"
            android:id="@+id/highlight_color_button2"
        />
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightblue"
            android:id="@+id/highlight_color_button3"
        />
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/magenta"
            android:id="@+id/highlight_color_button4"
        />
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/orange"
            android:id="@+id/highlight_color_button5"
        />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
    >
         <CheckBox 
            android:id="@+id/highlight_underline_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
	    <TextView
	        android:id="@+id/highlight_underline_label"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:singleLine="true"
            android:textSize="16dp"
            android:gravity="center_vertical"  />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
    >
         <CheckBox 
            android:id="@+id/highlight_crossout_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/highlight_crossout_label"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:textSize="16dp"
            android:gravity="center_vertical"  />
    </LinearLayout>
    <include layout="@layout/ok_cancel_buttons" android:id="@+id/authentication_buttons" />

</LinearLayout>
